      \hfill
      \begin{minipage}[c]{0.35\linewidth}
        \includegraphics[width=\linewidth]{resources/logos/uva}
      \end{minipage}
    \end{figure}}{%
    %%   VU Bachelor or Master Thesis
    \begin{figure}
      \begin{minipage}[c]{0.35\linewidth}
        \includegraphics[width=\linewidth]{resources/logos/vua}
      \end{minipage}
    \end{figure}
